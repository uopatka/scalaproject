# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Homepage
GET     /                               controllers.HomeController.index()

# Map static resources
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

# Show a specific book
GET     /book/:isbn                     controllers.HomeController.showBook(isbn: String)

# Add book form
GET     /add-book                       controllers.HomeController.addBook()
POST    /add-book                       controllers.HomeController.addBookSubmit()

# Add publication form
GET     /add-publication                controllers.HomeController.addPublication()
POST    /add-publication                controllers.HomeController.addPublicationSubmit()

# Create book form
GET     /create-book/:isbn              controllers.HomeController.createBook(isbn: String)
POST    /create-book/:isbn              controllers.HomeController.createBookSubmit(isbn: String)

# Create publication form
GET     /create-publication/:doi        controllers.HomeController.createPublication(doi: String)

# Delete book
GET     /delete-book                    controllers.HomeController.deleteBook(id: Long)
POST    /delete-book                    controllers.HomeController.deleteBook(id: Long)

# Edit book form
GET     /edit-book-entry/:id            controllers.HomeController.editBookEntry(id: Long)
POST    /edit-book-entry                controllers.HomeController.editBookEntrySubmit()

# Edit pages read
POST    /book-entry/:id/pages-read      controllers.EntryController.updatePagesRead(id: Long)

# Edit status
POST    /book-entry/:id/status          controllers.EntryController.updateStatus(id: Long)

# Log in form
GET     /login                          controllers.AuthController.loginPage()
POST    /login                          controllers.AuthController.loginSubmit()

# Log out
GET     /logout                         controllers.AuthController.logout()

# Register form
GET     /register                       controllers.AuthController.registerPage()
POST    /register                       controllers.AuthController.registerSubmit()

# Edit cover
POST    /books/:entryId/editCover       controllers.EntryController.editBookCover(entryId: Long)

# Serve files
GET     /uploads/:filename              controllers.HomeController.serveUpload(filename: String)

# Add note
GET     /note/add/:entryId              controllers.NoteController.add(entryId: Long)
POST    /note/add/:entryId              controllers.NoteController.addSubmit(entryId: Long)

# Edit note
GET     /note/edit/:noteId              controllers.NoteController.edit(noteId: Long)
POST    /note/edit/:noteId              controllers.NoteController.editSubmit(noteId: Long)

# Delete note
POST    /note/delete/:noteId            controllers.NoteController.delete(noteId: Long)

GET     /book-entry/:id                 controllers.HomeController.showBookByEntryId(id: Long)

# Update book's pages
POST    /book/updatePages/:entryId      controllers.EntryController.updateBookPages(entryId: Long)

# Update book's publish year
POST    /book/updateYear/:entryId       controllers.EntryController.updateBookYear(entryId: Long)

# Update entry's tags
POST    /book-entry/:entryId/tags       controllers.EntryController.updateTags(entryId: Long)

# For showing notes
GET     /notes                          controllers.NoteController.showNotes()

# Drawing a book
GET     /draw-to-read-book              controllers.HomeController.drawToReadBook()
